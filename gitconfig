[user]
	name = Agnes Chang
	email = kradeki@gmail.com

[core]
    editor = emacs
    autocrlf = input
    excludesfile = ~/.gitignore

[color]
    diff = true
    status = true
    branch = true
    interactive = true
    ui = true

[alias]
    st = status -sb
    di = diff
    poh = push origin HEAD
    wdf = diff --word-diff
    co = checkout
    ci = commit
    br = branch
    sta = stash
    sub = submodule
    pre = pull --rebase
    lg = log --graph --pretty=format:'%Cred%h%Creset %C(cyan)%an%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    tags = tag -l
    prlocal = !sh -c 'git branch --merged | grep -v "^*" | xargs git branch -d'
    prorigin = remote prune origin

[merge]
    tool = opendiff

#[branch]
#    autosetuprebase = always

[push]
	default = simple

[credential]
	helper = osxkeychain
